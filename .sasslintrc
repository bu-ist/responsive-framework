{
  "options": {
    "merge-default-rules": false,
    "formatter": "stylish",
    "max-warnings": 50
  },
  "files": {
    "include": "css-dev/**/*.s+(a|c)ss",
    "ignore": [
      "sass/vendor/**/*.*"
    ]
  },
  "rules": {
    "extends-before-mixins": 2,
    "extends-before-declarations": 2,
    "placeholder-in-extend": 2,
    "mixins-before-declarations": [
      2,
      {
        "exclude": [
          "breakpoint",
          "mq"
        ]
      }
    ],
    "no-warn": 1,
    "no-debug": 1,
    "no-ids": 2,
    "no-important": 2,
    "hex-notation": [
      2,
      {
        "style": "uppercase"
      }
    ],
    "indentation": [
      2,
      {
        "size": "tab"
      }
    ]
  }
}